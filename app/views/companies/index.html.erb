<h1>Welcome to Rwanda Transportation Platform </h1>
<div>
  <% if current_user && current_user.admin %>
    <%= link_to "Add Company", "/companies/new" %>
  <% end %>
  <% @companies.each_slice(2) do |two_companies| %>
    <div>
      <% two_companies.each do |company| %>
        <div id="container" style="white-space:nowrap">
        <div>
          <img class="image" src="<%= company.images.first.url %>" align="center">  
        </div>

        <div id="texts" style=" display:inline; white-space:nowrap;">
          <h2><%= link_to company.name, "/companies/#{company.id}" %></h2>
          <h2><%= company.description %></h2>
          <h2><%= company.email %></h2>
          <h2><%= company.phone_number %></h2>  
        </div>
          
          
        </div>
      <% end %>
    </div> 
  <% end %>
</div>









