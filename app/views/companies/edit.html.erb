<div class="container" id="wrap">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <%= form_tag "/companies/#{@company.id}", method: :patch do %>
            <form action="r" method="post" accept-charset="utf-8" class="form" role="form">   <legend>Edit <%= @company.name %> Information</legend> 
                    <input type="text" name="name" value="<%= @company.name %>" class="form-control input-lg"  /><br><input type="text" name="description" value="<%= @company.description %>" class="form-control input-lg"  /><br><input type="text" name="email" value="<%= @company.email %>" class="form-control input-lg" /><br><input type="number" name="phone_number" value="<%= @company.phone_number %>" class="form-control input-lg" />  
                    <button class="btn btn-lg btn-primary btn-block update-btn" type="submit">
                        Update Company Info
                    </button>
            <% end %>
            </form>
        </div>
    </div>
</div>

